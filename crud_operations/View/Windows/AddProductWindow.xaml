<Window x:Class="crud_operations.View.Windows.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:crud_operations.View.Windows"
        mc:Ignorable="d"
        Title="Добавить товар" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Text="Имя:"/>
        <TextBox Name="NameTb" Grid.Row="0" Grid.Column="2"/>
        
        <TextBlock Grid.Row="2" Text="Цена:"/>
        <TextBox Name="PriceTb" Grid.Row="2" Grid.Column="2"/>
        
        <TextBlock Grid.Row="4" Text="Категория:"/>
        <ComboBox Name="CategoryCmb" Grid.Row="4" Grid.Column="2"/>

        <TextBlock Grid.Row="6" Text="Описание:"/>
        <TextBox Name="DescriptionTb" Grid.Row="6" Grid.Column="2"/>

        <TextBlock Grid.Row="8" Text="Дата выпуска:"/>
        <DatePicker Name="ReleaseDateDp" Grid.Row="8" Grid.Column="2"/>

        <TextBlock Grid.Row="10" Text="Есть на складе:"/>
        <CheckBox Name="IsAvaliableCb"  Grid.Row="10" Grid.Column="2"/>

        <TextBlock Grid.Row="12" Text="Фото:"/>
        <TextBox Name="PhotoTb" Grid.Row="12" Grid.Column="2"/>

        <Button Name="AddBtn" Content="Добавить" Grid.Row="14" Grid.Column="2" Click="AddBtn_Click"/>
        <Button Name="LoadFromPCBtn" Grid.Row="14" Content="Загрузить" Click="LoadFromPCBtn_Click"/>
    </Grid>
</Window>
